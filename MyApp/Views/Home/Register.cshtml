@{
    ViewData["Title"] = "Register Page";
}

<h1>Login</h1>
<hr/>
<div class="text-center">
 <form  action="/home/NewUser">

 <label for="fn">First Name:</label><br>
  <input type="text" id="fn" name="fn" required><br>

  <label for="ln">Last Name:</label><br>
  <input type="text" id="ln" name="ln"  required><br>

  <label for="mn">Mobile No:</label><br>
  <input type="number" id="mn" name="mn" required><br>

  <label for="email">Email:</label><br>
  <input type="email" id="email" name="email" value="" required><br>
  
  <label for="password">Password:</label><br>
  <input type="password" id="pwd" name="pwd" ><br><br>

  <label for="password">Confirm Password:</label><br>
  <input type="password" id="cnfpwd" name="cnfpwd" ><br><br>
  
  <input type="submit" value="Submit">
</form> 
</div>
